{% for product in products %}
<div class="col mb-5">
	<div
		class="card h-100">
		<!-- Product image-->
		{% if product.quantity == 0 %}
			<div class="badge alert-danger position-absolute" style="top: 0.5rem; right: 0.5rem">Sold</div>
		{% endif %}

		<img
		class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..."/>
		<!-- Product details-->
		<div class="card-body p-4">
			<div
				class="text-center">
				<!-- Product name-->
				<h5 class="fw-bolder">{{product.name}}</h5>
				<!-- Product price-->
				{{product.price}}â‚¬
			</div>
		</div>
		<!-- Product actions-->
		<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
			<div class="text-center">
			{% if product.quantity == 0 %}
				<a class="btn btn-outline-dark mt-auto" href="{{ path('app_product_details', {'slug': product.slug}) }}">View options</a>
			{% else %}
				<a class="btn btn-outline-dark mt-auto" href="{{ path('app_product_details', {'slug': product.slug}) }}">Add to cart</a>
			{% endif %}
			</div>
		</div>
	</div>
</div>
{% endfor %}
